<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_corner_6"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#ff848487"
                android:textSize="14sp"
                tools:text="结算时间：2020.12.02 15:30" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff848487"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="已结算" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EBEBED" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="90dp"
                android:scaleType="centerCrop"
                android:layout_height="90dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/rank"
                android:textSize="10dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/goods_recm_reward_bg"
                android:text="商品排名:3"
                android:gravity="center"
                android:layout_alignBottom="@id/item_img"
                android:layout_width="90dp"
                android:layout_height="20dp"/>

            <com.snqu.shopping.ui.main.view.ItemNameView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/item_img" />

            <TextView
                android:id="@+id/item_recomm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/item_name"
                android:textColor="#ff848487"
                android:textSize="12sp"
                tools:text="推荐时间：2020.12.02 15:30" />

            <TextView
                android:id="@+id/item_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_name"
                android:layout_alignBottom="@+id/item_img"
                android:textColor="#ff25282d"
                android:textSize="12sp"
                tools:text="获得：¥99.00" />

            <TextView
                android:id="@+id/item_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_img"
                android:layout_alignParentRight="true"
                android:textColor="#ff25282d"
                android:textSize="12sp"
                tools:text="获得：¥99.00" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/withdrawal_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算时间"
            android:textColor="#ff25282d"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算时间，会根据对应等级和交易金额，进行变化而变化，等级越高，结算时间越短，结算时间，最短可以日结!"
            android:textColor="#ff000000"
            android:textSize="13sp"
            />
        <TextView
            android:layout_marginBottom="26dp"
            android:layout_marginTop="19dp"
            android:id="@+id/tv_know"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:background="@drawable/ripple_withdrawal_know_bg"
            android:text="知道了"
            android:textColor="#ffffffff"
            android:textSize="13sp"
            />
    </LinearLayout>
</FrameLayout>
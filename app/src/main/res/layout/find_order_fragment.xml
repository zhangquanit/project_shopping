<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    tools:background="@color/color_f5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/search_input_bg"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:hint="请输入或粘贴商品订单编号"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="40dp"
            android:privateImeOptions="搜索"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#131413"
            android:textColorHint="#ffc0c2c4"
            android:textSize="13sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_clear_all"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_delete" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="如何获取订单编号？"
                android:textColor="#ff25282d"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="1、打开手机淘宝/京东/拼多多/唯品会/苏宁，进入“我的”页面-全部订单"
                android:textColor="#ff25282d"
                android:textSize="14sp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_find_order_one"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="26dp"
                android:layout_height="wrap_content"
                android:text="2、复制订单号，粘贴在上方搜索栏"
                android:textColor="#ff25282d"
                android:textSize="14sp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="40dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_find_order_two"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询规则"
                android:textColor="#ff25282d"
                android:textSize="13sp"
                />
            <TextView
                android:layout_marginBottom="32dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_find_order_rule"
                android:layout_width="match_parent"
                android:lineSpacingMultiplier="1.2"
                android:layout_height="wrap_content"
                tools:text="1、付款后10分钟内会自动同步订单，无需手动操作"
                android:textColor="#ff848487"
                android:textSize="11sp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="76dp"
    android:background="@drawable/bg_my_feedback"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题和建议："
            android:padding="0dp"
            android:textColor="#FF25282D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:padding="0dp"
            android:maxLines="1"
            android:textColor="#FF9FA0A0"
            android:textSize="13sp" />


        <View
            android:id="@+id/item_oval_view"
            android:layout_width="4.5dp"
            android:layout_height="4.5dp"
            android:layout_marginEnd="5.5dp"
            android:background="@drawable/bg_my_feedback_view" />

        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="已回复"
            android:padding="0dp"
            android:textColor="#FF22B66E"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="13dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交时间："
            android:lineHeight="0dp"
            android:textColor="#FF25282D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineHeight="0dp"
            android:maxLines="1"
            android:textColor="#FF9FA0A0"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home_white"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11.5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/six_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"
            android:text="大额神券"
            android:textColor="#25282D"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/six_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/six_title"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/six_title"
            android:background="@drawable/bg_six_sub_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="2.75dp"
            android:paddingTop="2.25dp"
            android:paddingRight="4.25dp"
            android:paddingBottom="1.75dp"
            android:text="天天领神券"
            android:textColor="#FF8202"
            android:textSize="11sp"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="9.5dp"
        android:text="消毒液 第二件半价"
        android:textColor="#FE3B3B"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_weight="1"
            android:id="@+id/item_one"
            android:layout_marginLeft="11.5dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/six_img"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/six_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/six_rebate"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="券后 328.00" />


        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:visibility="gone"
            android:id="@+id/item_two"
            tools:visibility="visible"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_marginRight="11.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/six_img_two"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/six_quan_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="券后 328.00" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
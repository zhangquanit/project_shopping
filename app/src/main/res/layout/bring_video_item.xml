<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.snqu.shopping.ui.bringgood.helper.DyJzvd
        android:id="@+id/item_video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:scaleType="fitXY"
        android:layout_gravity="bottom"
        android:src="@drawable/bring_detial_cover_b" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/bring_detial_cover_t" />
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        tools:text="范思哲香水男用100ML" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/item_goodbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                app:riv_corner_radius="5dp" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/item_img"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/item_img"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#ffffffff"
                android:textSize="14dp"
                tools:text="纪梵希香水男用100ML纪梵希香水男用100..." />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_alignLeft="@+id/item_title"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    tools:text="¥ 1400" />

                <TextView
                    android:id="@+id/item_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/item_price"
                    android:background="@drawable/icon_person_coupon"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="10dp"
                    tools:text="10元券" />


                <TextView
                    android:id="@+id/item_fan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_coupon"
                    android:background="@drawable/bring_share_earn"
                    android:paddingLeft="8dp"
                    android:paddingTop="3dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="3dp"
                    android:textColor="#ffffffff"
                    android:textSize="10sp"
                    tools:text="分享赚 ¥ 12.90" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/bring_detial_buy" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="105dp"
            android:drawableTop="@drawable/bring_detial_share"
            android:drawablePadding="6dp"
            android:gravity="center_horizontal"
            android:text="分享"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="25dp"
            android:drawableTop="@drawable/bring_detial_text"
            android:drawablePadding="6dp"
            android:gravity="center_horizontal"
            android:text="文案"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </RelativeLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_bring_goods_item_sale"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/item_play" />

            <TextView
                android:id="@+id/item_sale_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="831人已买"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bring_goods_item"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="范思哲(VERSACE)晶钻女用香水 30ml "
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="799"
            android:textColor="#FFFFBB02"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="18dp">

            <TextView
                android:id="@+id/item_coupon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:background="@drawable/icon_share_coupon"
                android:gravity="center"
                android:layout_marginEnd="8dp"
                android:text="100元券"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_earn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:maxLines="1"
                android:layout_alignTop="@+id/item_coupon"
                android:layout_alignBottom="@id/item_coupon"
                android:layout_toEndOf="@id/item_coupon"
                android:background="@drawable/bg_bring_goods_item_share"
                android:gravity="center"
                android:text="分享赚¥12.90"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#FFFFFFFF"
                android:textSize="10sp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
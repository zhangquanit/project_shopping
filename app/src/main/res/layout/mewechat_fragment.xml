<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="#f5f5f5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/wechat_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="28dp"
            android:textColor="#25282D"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="恭喜！你已成为星乐桃导师"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号填写后，你的下级都能看到你的微信号，可主动联系你"
            android:textColor="#B0B0B0"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:orientation="horizontal"
            android:background="@color/white">


            <EditText
                android:id="@+id/edit_wechat_num"
                android:layout_marginStart="15dp"
                android:textSize="13dp"
                android:textColor="#25282D"
                android:textColorHint="#C3C4C7"
                android:hint="请输入你的微信号"
                android:maxLines="1"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM-_"
                android:maxLength="20"
                android:layout_width="match_parent"
                android:background="@null"
                android:inputType="text"
                android:layout_height="match_parent"
                android:importantForAutofill="no" />

        </LinearLayout>


    </LinearLayout>






    <TextView
        android:id="@+id/tv_wechat_sure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ripple_sure_withdrawal_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="15sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="88.5dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_six_item"
    android:orientation="vertical">



    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/six_img"
        android:layout_marginTop="1.5dp"
        android:layout_marginLeft="1.5dp"
        android:layout_marginRight="1.5dp"
        app:riv_corner_radius_top_left="8dp"
        app:riv_corner_radius_top_right="8dp"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="79dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/six_tip"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="优惠券1000"
        android:background="@drawable/home_six_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/six_rebate"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/six_img"
        android:text="返35.78"
        android:visibility="gone"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/six_rebate"
        android:id="@+id/six_quan"
        android:text="券后 328.00"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>

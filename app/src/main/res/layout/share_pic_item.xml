<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#ffffff"
    android:layout_height="95dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_pic_item"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="4dp"
        android:src="@drawable/icon_min_default_pic"
        android:layout_width="95dp"
        android:layout_height="95dp" />
    <TextView
        android:id="@+id/tv_blur"
        android:background="@drawable/er_notice_bg"
        android:layout_width="95dp"
        android:text="二维码图片"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:textColor="#ffffffff"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_height="23dp" />
    <View
        android:id="@+id/view_blur"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="10dp"
        android:background="@drawable/icon_blur_bg"
        android:layout_width="95dp"
        android:layout_height="95dp" />


    <ImageView
        android:id="@+id/img_select"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/share_pic_selector"
        android:layout_width="18dp"
        android:layout_height="18dp" />
</FrameLayout>